# NVIDIA NIM API Key (Get from https://build.nvidia.com)
NIM_API_KEY=your_nvidia_nim_api_key_here

# MongoDB Connection (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ciphersqlstudio?retryWrites=true&w=majority

# PostgreSQL Connection (Sandbox Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sql_sandbox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (for optional auth feature)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
